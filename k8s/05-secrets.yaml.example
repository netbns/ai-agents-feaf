apiVersion: v1
kind: Secret
metadata:
  name: feaf-secrets
  namespace: feaf-dashboard
  labels:
    app: feaf-dashboard
    component: secrets
type: Opaque
stringData:
  # Database credentials
  # IMPORTANT: Replace these values with actual secure credentials before deployment
  # See SECRET-MANAGEMENT.md for instructions on generating secure values
  db-user: "feaf_user"
  db-password: "CHANGE_ME_secure-password-here"
  db-name: "feaf"
  db-host: "feaf-postgres"
  db-port: "5432"
  
  # Full database connection URL for Prisma
  # Format: postgresql://username:password@host:port/database
  database-url: "postgresql://feaf_user:CHANGE_ME_secure-password-here@feaf-postgres:5432/feaf"
  
  # JWT secret for token signing
  # IMPORTANT: Generate a strong random secret before deployment
  # Example: openssl rand -base64 32
  jwt-secret: "CHANGE_ME_your-jwt-secret-here-use-openssl-rand-base64-32"
  
  # PostgreSQL superuser password (for database initialization)
  postgres-password: "CHANGE_ME_postgres-admin-password"
