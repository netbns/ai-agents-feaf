# Application
NODE_ENV=development
APP_NAME=feaf-dashboard-backend
APP_PORT=3000
APP_HOST=0.0.0.0
LOG_LEVEL=debug

# Database
DATABASE_URL=postgresql://feaf_user:feaf_password@localhost:5432/feaf_dashboard

# JWT
JWT_SECRET=your-secret-key-change-in-production-minimum-32-chars
JWT_EXPIRATION=24h

# Dapr
DAPR_HTTP_PORT=3500
DAPR_GRPC_PORT=50001
DAPR_APP_ID=feaf-backend
DAPR_APP_PORT=3000

# Prometheus Metrics
METRICS_PORT=9090

# Logging
LOG_FORMAT=json

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_METRICS=true
